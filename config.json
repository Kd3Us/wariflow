{
  "system": {
    "version": "3.0.0",
    "max_tasks_default": 5,
    "max_tasks_limit": 25,
    "min_tasks_allowed": 1,
    "supported_languages": ["french", "english"],
    "ml_confidence_threshold": 0.7,
    "min_training_samples": 50,
    "retraining_frequency_days": 30,
    "allow_unlimited_tasks": false
  },
  "ml_models": {
    "industry_classifier": {
      "algorithm": "voting_classifier",
      "models": ["random_forest", "svm", "naive_bayes"],
      "features": ["tfidf", "ngrams", "keyword_density"]
    },
    "complexity_predictor": {
      "algorithm": "random_forest_classifier",
      "features": ["text_length", "keyword_count", "technical_terms", "industry_factor"]
    },
    "duration_estimator": {
      "algorithm": "random_forest_regressor",
      "features": ["complexity_score", "project_type_encoding", "keyword_complexity"]
    },
    "project_type_predictor": {
      "algorithm": "random_forest_classifier",
      "features": ["text_features", "semantic_features", "linguistic_features"]
    },
    "task_generator": {
      "algorithm": "clustering_based",
      "method": "kmeans",
      "feature_extraction": "tfidf_keywords"
    }
  },
  "training_data_sources": {
    "primary_dataset": "training_dataset.csv",
    "test_dataset": "test_dataset.csv",
    "fallback_enabled": true,
    "auto_generation": true
  },
  "feature_engineering": {
    "text_features": [
      "text_length",
      "word_count", 
      "sentence_count",
      "avg_word_length",
      "avg_sentence_length",
      "capital_ratio",
      "digit_ratio"
    ],
    "linguistic_features": [
      "noun_ratio",
      "verb_ratio", 
      "adjective_ratio",
      "unique_word_ratio"
    ],
    "semantic_features": [
      "tech_keyword_density",
      "business_keyword_density",
      "technical_sophistication"
    ],
    "complexity_indicators": [
      "complexity_indicator_count",
      "complexity_density",
      "integration_mentions",
      "security_mentions"
    ],
    "domain_features": [
      "healthcare_score",
      "finance_score", 
      "education_score",
      "ecommerce_score"
    ]
  },
  "model_performance": {
    "evaluation_metrics": ["accuracy", "precision", "recall", "f1_score"],
    "cross_validation_folds": 5,
    "test_size": 0.2,
    "random_state": 42
  },
  "caching": {
    "prediction_cache_enabled": true,
    "cache_size_limit": 1000,
    "cache_ttl_hours": 24
  },
  "logging": {
    "model_training_logs": true,
    "prediction_logs": true,
    "performance_monitoring": true
  }
}